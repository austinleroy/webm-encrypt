{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "declaration": true,
    "outDir": "./lib", 
    "rootDir": "./src", 
    "removeComments": true,
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node", 
    "types": [
      "node"
    ],
    "esModuleInterop": true
  }
}